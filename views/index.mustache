<div class="row">
  <div class="col-xs-12">
    <form name="f">
      <div class="form-group">
        <input type="text" class="form-control input-lg" type="text" name="q" tabindex="1" value="{{q}}">
      </div>
      <input class="btn btn-default" type="submit" value="Search">
        <p class="pull-right"><a href="#">Advanced Search</a> &bull; <a href="#" data-toggle="modal" data-target="#help">Syntax Help</a> &bull; <a href="#">About</a></p>
    </form>
  </div>
</div>
<div class="row">
  {{#q}}
    <div class="col-xs-12 text-right">
      <p>{{numResults}} card{{pluralResults}}</p>
    </div>
  {{/q}}
  <div class="col-xs-12 text-center">
    {{#results}}
      <img alt="{{name}}" height="{{imgHeight}}" width="{{imgWidth}}" src="http://wow.zamimg.com/images/hearthstone/cards/enus/original/{{systemId}}.png">
    {{/results}}
  </div>
</div>
{{>help}}
